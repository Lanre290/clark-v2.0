{
  "compilerOptions": {
    "target": "ES2020",                         
    "module": "commonjs",                       
    "rootDir": ".",                             
    "outDir": "./dist",                         
    "resolveJsonModule": true,                  
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                             
    "skipLibCheck": true                        
  },
  "include": [
    "server.ts",
    "src//*"
  ],
  "exclude": [
    "node_modules"
  ]
}